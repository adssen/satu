<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= render @tasks %>
  </tbody>
</table>

<h1>To-Do tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @to_do %>
  </tbody>
</table>

<h1>Doing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
<%= render @doing %>
  </tbody>
</table>
<h1>Done Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
<%= render @done %>
  </tbody>
</table>
<br>

<%= link_to 'New Task', new_task_path %>
